&CONTROL
    calculation = 'scf'
    verbosity = 'high'
    restart_mode = 'from_scratch'
    tprnfor = .true.
    prefix = 'temp',
    forc_conv_thr = 1.0D-4,
    etot_conv_thr = 1.0D-3,
/
&SYSTEM
	ibrav = 0,
	nat = 18,
	ntyp = 2,
 	ecutwfc = 60.0D0,
	ecutrho = 240.0D0,
	vdw_corr = 'dft-d',
	nosym=.true.
	nbnd = 21,
/
&ELECTRONS
	conv_thr = 1.D-10,
  	mixing_beta = 0.5D0,
	electron_maxstep = 300,
	diagonalization='cg',
/
&IONS
        ion_temperature = 'svr',
        tempw = 300,
/
&CELL
/
ATOMIC_SPECIES
H	1.0079	H.pbe-tm-new-gipaw-dc.UPF
C	12.0107	C.pbe-tm-new-gipaw-dc.UPF
ATOMIC_POSITIONS angstrom
